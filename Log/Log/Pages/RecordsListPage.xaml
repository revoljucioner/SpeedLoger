<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Log.Pages.RecordsListPage" Title="Records List">
	<StackLayout>
		<ListView x:Name="recordsList" ItemsSource="{Binding}" 
		          SelectedItem="{Binding SelectedTrack, Mode=TwoWay}" 
		          HasUnevenRows="True">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.View>
							<StackLayout Orientation="Horizontal">
								<Label Text="{Binding Id}" FontSize="Small"  HorizontalOptions="Start"/>
								<Label Text="{Binding StartDateTime}" FontSize="Small"  HorizontalOptions="FillAndExpand"/>
								<Button Text="Open" BackgroundColor="Gray" CommandParameter="{Binding .}"  HorizontalOptions="End" Clicked="OnOpenClicked" />
								<Button Text="X" BackgroundColor="Gray" CommandParameter="{Binding .}"  HorizontalOptions="End" Clicked="OnDeleteClicked" />
								<Button Text="D" BackgroundColor="Gray" CommandParameter="{Binding .}"  HorizontalOptions="End" Clicked="OnDecodeClicked" />
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>