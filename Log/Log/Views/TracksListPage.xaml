<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="MyNotifyPage"
             x:Class="Log.Views.TracksListPage" Title="Records List">
	<StackLayout>
		<ListView x:Name="booksList" ItemsSource="{Binding Tracks}" HasUnevenRows="True">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.View>
							<StackLayout>
								<Label Text="{Binding Id}" FontSize="Medium" />
								<Label Text="{Binding StartDateTime}" FontSize="Small" />
								<Button Text="Remove" CommandParameter="{Binding .}" Command="{Binding Source={x:Reference MyNotifyPage}, Path=BindingContext.DeleteTrackCommand}"/>
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>