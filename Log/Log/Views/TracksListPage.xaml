<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="MyNotifyPage"
             x:Class="Log.Views.TracksListPage" Title="Список друзей">
	<StackLayout>
		<Button Text="Добавить" Command="{Binding CreateFriendCommand}" />
		<ListView x:Name="booksList" ItemsSource="{Binding Tracks}"
		          SelectedItem="{Binding SelectedFriend, Mode=TwoWay}" HasUnevenRows="True">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.View>
							<StackLayout>
								<Label Text="{Binding Id}" FontSize="Medium" />
								<Label Text="{Binding StartDateTime}" FontSize="Small" />
								<!--<Button Text="X" BackgroundColor="Gray" HorizontalOptions="End" Clicked="{Binding DeleteTrackCommand}" />-->
								<Button Text="Remove" CommandParameter="{Binding .}" Command="{Binding Source={x:Reference MyNotifyPage}, Path=BindingContext.DeleteTrackCommand}"/>
								<!--<Button Text="X" BackgroundColor="Gray" CommandParameter="{Binding .}"  HorizontalOptions="End" Clicked="{Binding DeleteTrackCommand}" />-->
								<!--<Label Text="{Binding Phone}" FontSize="Small" />-->
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>